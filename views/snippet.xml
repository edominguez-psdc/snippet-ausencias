<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <template id="s_form_ausencia" name="Formulario de ausencia">
        <section class="snippet_testimonial">
            <div>
                <form action="" method="post" class="s_website_form container-fluid mt32" enctype="multipart/form-data">
                    <div class="container">
                        <div class="form-group form-field">
                            <xpath expr="//group[@name='col_right']" position="replace">
                                <div class="form-group row form-field">
                                    <label class="col-lg-5 col-md-4 col-form-label" for="contact_name">Tipo de Ausencia: </label>
                                    <div class="col-lg-7 col-md-8">
                                        <select name="holiday_status_id" class="form-control o_website_form_input" >
                                            <!-- <option value="1">Ausencias legales</option>
                                            <option value="2">Ausencia por enfermedad</option>
                                            <option value="3">Dias compensatorios</option>
                                            <option value="4">Dias no pagados</option> -->
                                        </select>
                                        <data>
                                            <record id='hr_leave_view_form' model="ir.ui.view">
                                                <field name="name">hr.leave.view.form</field>
                                                <field name="model">hr.leave.</field>
                                                <field name="type">form</field>
                                                <field name="inherit_id" ref='hr_holidays.hr_leave_view_form' />
                                                <field name="name"> </field>
                                                <!-- <field name="arch" type="xml">
                                                    <xpath>
                                                        <field name="name"/>
                                                    </xpath>
                                                </field>     -->
                                            </record>
                                        </data>
                                    </div>
                                </div>
                                <div class="form-group row form-field">
                                    <label class="col-lg-5 col-md-4 col-form-label" for="phone">Duracion</label>
                                    <div class="col-lg-7 col-md-8">
                                        <input type="text" class="form-control o_website_form_input" name="number_of_days_display"  readOnly= "True" />
                                    </div>
                                </div>
                                <div class="form-group row form-field o_website_form_required_custom">
                                    <label class="col-lg-5 col-md-4 col-form-label" for="email_from">De: </label>
                                    <div class="col-lg-7 col-md-8">
                                        <input type="date" class="form-control o_website_form_input" name="date_from" />
                                    </div>
                                </div>
                                <div class="form-group row form-field o_website_form_required_custom">
                                    <label class="col-lg-5 col-md-4 col-form-label" for="partner_name">Hasta</label>
                                    <div class="col-lg-7 col-md-8">
                                        <input type="date" class="form-control o_website_form_input" name="date_to" />
                                    </div>
                                </div>
                                <div class="form-group row form-field o_website_form_required">
                                    <label class="col-lg-5 col-md-4 col-form-label" for="name">Descripcion</label>
                                    <div class="col-lg-7 col-md-8">
                                        <textarea type="text" class="form-control o_website_form_input" name="name" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7">
                                        <button name="db_add" type="object" string="Run forest" class="oe_highlight" />
                                    </div>
                                </div>
                            </xpath>    
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </template>

    <!-- OBLIGATORIO PARA QUE APAREZCA EN EL SNIPPET SELECTOR  -->
    <template id="snippet_ausencias" inherit_id="website.snippets" name="Ausencias">
        <xpath expr="//div[@id='o_scroll']" position="inside">
            <div class="o_panel" id="snippet_theme_crafito">
                <div class="o_panel_header">
                  <span class="fa-stack">
                      <i class="fa fa-circle-o-notch fa-stack-1x"/>
                  </span>PSDC Inc 
                </div>
                <div class="o_panel_body">
                  <t t-snippet="snippet-ausencias.s_form_ausencia"
                      t-thumbnail="/website/static/src/img/snippets_thumbs/s_tabs.png"/>
                </div>
            </div>
        </xpath>
    </template> 

</odoo>